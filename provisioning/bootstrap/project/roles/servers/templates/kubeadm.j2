---
apiVersion: kubeadm.k8s.io/v1beta1
kind: JoinConfiguration
discovery:
  bootstrapToken:
    token: {{ hostvars[k8s_master].kubeadm_token }}
    apiServerEndpoint: "{{ k8s_master }}:6443"
    caCertHashes:
      - "sha256:{{ hostvars[k8s_master].kubeadm_hash }}"
nodeRegistration:
  kubeletExtraArgs:
    cloud-provider: aws